# Example storage configuration without profiles (inline)

nodes = {
  compute-01 = {
    hostname = "compute-node-01.maas"

    block_devices = {
      sda = {
        name           = "sda"
        id_path        = "/dev/disk/by-id/scsi-0QEMU_QEMU_HARDDISK_drive-scsi0"
        size_gigabytes = 500
        is_boot_device = true
        partitions = [
          {
            size_gigabytes = 50
            fs_type        = "ext4"
            mount_point    = "/boot"
            bootable       = true
          },
          {
            size_gigabytes = 100
            fs_type        = "ext4"
            mount_point    = "/"
          }
        ]
      }
      sdb = {
        name           = "sdb"
        id_path        = "/dev/disk/by-id/scsi-0QEMU_QEMU_HARDDISK_drive-scsi1"
        size_gigabytes = 1000
        partitions = [
          {
            size_gigabytes = 1000
            fs_type        = "xfs"
            mount_point    = "/data"
          }
        ]
      }
    }
  }
}
